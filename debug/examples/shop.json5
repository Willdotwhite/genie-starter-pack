{
    assetPrefix: "shop",
    music: "home.backgroundMusic",
    background: {
        items: [{ key: "shop.magicShop", x: 0, y: 0 }],
    },
    styleDefaults: {
        // menu button text uses styleDefaults, everything else can be modified.
        fontFamily: "ReithSans",
        fontSize: "24px",
        resolution: 10,
        align: "center",
    },
    titles: [
        {
            type: "image",
            key: "titleBackground",
            xOffset: 0,
            yOffset: 0,
        },
        {
            type: "text",
            value: "Shop",
            xOffset: 0,
            yOffset: 0,
            styles: { fontSize: 30 },
        },
    ],
    titlePadding: 20,
    balance: {
        background: {
            type: "image",
            key: "balanceBackground",
        },
        icon: {
            type: "image",
            key: "balanceIcon",
        },
        value: {
            type: "text",
            key: "coin", // the id of the currency item, which must exist in the inventory collection
            // styles: {},
        },
    },
    balancePadding: 15,
    listPadding: {
        x: 18.86,
        y: 15.09,
        outerPadFactor: 1.8,
    },
    collection: ["debug-inventory", "debug-armoury"],
    paneCollections: {
        shop: "debug-armoury",
        manage: "debug-inventory",
    },
    confirm: {
        detailView: true, // true === smaller image and more text. false === large image only.
        prompt: {
            shop: { legal: "Purchase this item?", illegal: "You can't afford this." },
            manage: { legal: "Do you want to \nequip this item?", illegal: "You've already \nequipped this." },
            // styles: {},
        },
        // title: { styles: {} }, // optionally configure styles on item text
        detail: { styles: { color: "#2b2", fontStyle: "italic" } },
        // description: { styles: {} },
        // price: { styles: {} },
    },
    menu: {
        buttonsRight: true, // set as false to X-flip the menu layout
    },
    columns: 1,
    assetKeys: {
        // background: "background", // if a string is passed, that asset is used for all panes
        background: {
            // menu: "", // pass empty string, or omit the key entirely, for a transparent BG
            shop: "background",
            manage: "background",
            confirm: "halfViewBackground",
        },
        scrollbar: "scrollbar",
        scrollbarHandle: "scrollbarHandle",
        itemBackground: "itemBackground",
        buttonBackground: "menuButtonBackground",
        buttonIcon: "menuButtonIcon",
        currency: "currencyIcon",
    },
    overlay: {
        items: [
            {
                type: "image",
                name: "background",
                assetKey: "itemBackground",
                isDynamic: false, // asset key is the value of assetKey
            },
            {
                type: "image",
                name: "itemIcon",
                assetKey: "icon",
                isDynamic: true, // asset key is item[assetKey]
                position: { align: "left", offsetX: 35, offsetY: 0 }, // x offsets are from an edge, y offsets are from the centre
                size: 76,
            },
            {
                type: "text",
                name: "itemName",
                value: "title",
                isDynamic: true,
                position: { align: "left", offsetX: 80, offsetY: -18 },
                styles: { fontSize: 18 },
            },
            {
                type: "text",
                name: "itemDescription",
                value: "description",
                isDynamic: true,
                position: { align: "left", offsetX: 80, offsetY: 4 },
                styles: { fontSize: 12 },
            },
        ],
        options: {
            shop: [
                {
                    type: "text",
                    name: "currencyAmount",
                    value: "price",
                    isDynamic: true,
                    position: { align: "right", offsetX: -44, offsetY: -10 },
                    styles: { fontSize: 14 },
                    activeStates: ["cta"],
                },
                {
                    type: "image",
                    name: "currency",
                    assetKey: "currency",
                    isDynamic: false,
                    position: { align: "right", offsetX: -64, offsetY: 0 },
                    activeStates: ["cta"],
                },
                {
                    type: "text",
                    name: "owned",
                    value: "Owned",
                    isDynamic: false,
                    position: { align: "right", offsetX: -76, offsetY: -10 },
                    styles: { fontSize: 18 },
                    activeStates: ["actioned"],
                },
            ],
            manage: [
                {
                    type: "text",
                    name: "equip",
                    value: "Equip",
                    isDynamic: false,
                    position: { align: "right", offsetX: -76, offsetY: -10 },
                    styles: { fontSize: 18 },
                    activeStates: ["cta"],
                },
                {
                    type: "text",
                    name: "equipped",
                    value: "Equipped",
                    isDynamic: false,
                    position: { align: "right", offsetX: -96, offsetY: -10 },
                    styles: { fontSize: 18 },
                    activeStates: ["actioned"],
                },
            ],
        },
    },
    eventChannel: "shop_menu",
}
